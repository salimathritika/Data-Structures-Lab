    insert_pos(n,pos);

    display();
    */
   printf("1.To insert in beginning\n2.To insert at end\n3.To insert after a specific key\n4.To delete in beginning\n5.To delete in end\n6.To enter data at specific position\n7.To display list\n.9.To exit");

    do
    {
        printf("\nEnter choice:\n");
    scanf("%d",&opt);
    switch(opt)
    {
    case 1:
        {
            printf("\nEnter data to be inserted:");
            scanf("%d",&n);
            insert_beg(n);
            break;
        }
    case 2:
        {
            printf("\nEnter the data to be inserted:");
            scanf("%d",&n);
