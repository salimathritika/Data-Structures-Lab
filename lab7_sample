//NOT WORKING
#include<stdio.h>
#include<stdlib.h>

typedef struct
{
    int data;
    struct node *next;
}node;

node *first=NULL;

void insert(int n)  //WORKS
{
    node *temp=(node*)malloc(sizeof(node));
    node *curr;
    temp->next=NULL;
    temp->data=n;
    if(first==NULL)
        first=temp;
    else
    {
        for(curr=first;curr->next!=NULL;curr=curr->next);
        curr->next=temp;
    }
}

void display() //WORKS
{
    node *curr;
    if(first==NULL)
        printf("\nList is empty\n");
    else
    {
        for(curr=first;curr!=NULL;curr=curr->next)
            printf("%d ",curr->data);
    }
}


void insert_beg(int n)  //WORKING
{
    node *temp,*curr;
    temp=(node*)malloc(sizeof(node));
    temp->data=n;
    temp->next=first;
    first=temp;
}

void insert_specifickey(int n,int key)
{
    node *temp,*prev,*curr;
    temp=(node*)malloc(sizeof(node));
    temp->data=n;
    if(first==NULL)
    {
        first=temp;
        temp->next=NULL;
    }
    else
    {
        for(curr=first,prev=first;(curr->data!=key && curr->next!=NULL);prev=curr,curr=curr->next)
        {
            if(curr->data==key)
            {
                prev->next=temp;
                temp->next=curr;
            }
        }
    }
}

//to insert at a specific position
void insert_pos(int n,int pos)   //NOT WORKING FOR POSITION 1
{
    int i=0;
    node *curr,*temp,*prev;
    temp=(node*)malloc(sizeof(node));
    for(curr=first,prev=first;curr->next!=NULL;prev=curr,curr=curr->next)
    {
        i++;
        if(i==pos)
        {
            temp->data=n;
            prev->next=temp;
            temp->next=curr;
            curr=temp;
        }
    }

}

int delete_beg()
{
    node *temp;
    temp=first;
    int a=temp->data;
    first=NULL;
    free(temp);
    return(a);
}

