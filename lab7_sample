int main()
{
    int opt,n,pos,i,num;
    printf("Enter number of nodes in list:");
    scanf("%d",&num);
    printf("Enter %d data:\n",num);
    for(i=0;i<num;i++)
    {
        scanf("%d",&n);
        insert(n);
    }
    display();
  /*  printf("\nEnter the data to be inserted:");
