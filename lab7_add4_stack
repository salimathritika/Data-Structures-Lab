//stack using SLL (OWN)
#include<stdio.h>
#include<stdlib.h>

typedef struct
{
    int data;
    struct node *next;
}node;

node *first=NULL;

void push(int n)
{
    node *temp;
    temp=(node *)malloc(sizeof(node));
    temp->data=n;
    temp->next=first;
    first=temp;
}

void pop()
{
    if(first==NULL)
        printf("\nStack is empty\n");
    else
    {
        node *temp;
        temp=first;
        printf("Data deleted is:%d\n",temp->data);
        first=first->next;
        free(temp);
    }
}

void display()
{
    node *curr;
    for(curr=first;curr!=NULL;curr=curr->next)
        printf("%d ",curr->data);
    printf("\n");
}

int main()
{
    int opt,ele;
    printf("1.Push\n2.Pop\n3/Display\n4.Exit\n");
    do
    {
        printf("Enter choice:");
        scanf("%d",&opt);
        switch(opt)
        {
        case 1:
            {
                printf("Enter data to be pushed:");
                scanf("%d",&ele);
                push(ele);
                break;
            }
        case 2:
            {
                pop();
                break;
            }
        case 3:
            {
                display();
                break;
            }
        case 4:
            printf("Exiting");
        }
    }while(opt!=4);
}
