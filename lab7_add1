//WORKS
#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
    int data;
    struct Node* next;
} Node;

Node* createNode(int data) {
    Node* newNode = (Node*)malloc(sizeof(Node));
    newNode->data = data;
    newNode->next = NULL;
    return newNode;
}

Node* insertAtEnd(Node* head, int data) {
    if (head == NULL) {
        return createNode(data);
    } else {
        head->next = insertAtEnd(head->next, data);
        return head;
    }
}

void traverseLinkedList(Node* current) {
    if (current == NULL) {
        return;
    }
    printf("%d -> ", current->data);
    traverseLinkedList(current->next);
}

int main() {
    Node* head = NULL;

    int n, ele;
    printf("Enter the number of nodes in the list: ");
    scanf("%d", &n);

    printf("Enter the elements to be inserted: ");
    for (int i = 0; i < n; i++) {
        scanf("%d", &ele);
        head = insertAtEnd(head, ele);
    }

    printf("Linked List: ");
    traverseLinkedList(head);
    printf("NULL\n");

    return 0;
}
