//stack using SLL (OWN)
#include<stdio.h>
#include<stdlib.h>

typedef struct
{
    int data;
    struct node *next;
}node;

node *first=NULL;

void enqueue(int n)
{
    node *temp;
    temp=(node*)malloc(sizeof(node));
    temp->data=n;
    if(first==NULL)
    {
        first=temp;
        first->next=NULL;
    }
    else
    {
        node *curr;
        for(curr=first;curr->next!=NULL;curr=curr->next);
        curr->next=temp;
        temp->next=NULL;
    }
}

void dequeue()
{
    if(first==NULL)
      printf("\nQueue is empty\n");
    else
    {
        node *temp;
        temp=first;
        printf("Data deleted is:%d\n",temp->data);
        first=first->next;
        free(temp);
    }
}


void display()
{
    node *curr;
    for(curr=first;curr!=NULL;curr=curr->next)
        printf("%d ",curr->data);
    printf("\n");
}

int main()
{
    int opt,ele;
    printf("1.Enqueue\n2.Dequeue\n3/Display\n4.Exit\n");
    do
    {
        printf("Enter choice:");
        scanf("%d",&opt);
        switch(opt)
        {
        case 1:
            {
                printf("Enter data to be inserted:");
                scanf("%d",&ele);
                enqueue(ele);
                break;
            }
        case 2:
            {
                dequeue();
                break;
            }
        case 3:
            {
                display();
                break;
            }
        case 4:
            printf("Exiting");
        }
    }while(opt!=4);
}
