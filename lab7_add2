#include <stdio.h>
#include <stdlib.h>

typedef struct  {
    int data;
    struct Node* next;
}Node;

Node* createNode(int data) {
    Node* newNode = (Node*)malloc(sizeof(Node));

    newNode->data = data;
    newNode->next = NULL;
    return newNode;
}

Node* insertSorted(Node* head, int data) {
    Node* newNode = createNode(data);

    if (head == NULL || data <= head->data) {
        newNode->next = head;
        return newNode;
    }

    Node* current = head;

    Node *temp=current->next;
    while (temp != NULL && temp->data < data) {
        current = current->next;
        temp=current->next;
    }

    newNode->next = current->next;
    current->next = newNode;

    return head;
}

Node* createSortedLinkedList() {
    Node* head = NULL;
    int n, data;

    printf("Enter the number of nodes in the sorted list: ");
    scanf("%d", &n);

    printf("Enter the sorted elements of the list:\n");
    for (int i = 0; i < n; ++i) {
        scanf("%d", &data);
        head = insertSorted(head, data);
    }

    return head;
}

Node* mergeSortedLists(Node* X, Node* Y) {
    Node dummy;
    Node* tail = &dummy;
    dummy.next = NULL;

    while (X != NULL && Y != NULL) {
        if (X->data <= Y->data) {
            tail->next = X;
            X = X->next;
        } else {
            tail->next = Y;
            Y = Y->next;
        }
        tail = tail->next;
    }

    if (X != NULL) {
        tail->next = X;
    } else {
        tail->next = Y;
    }

    return dummy.next;
}

void display(Node* head) {
    Node* current = head;
    while (current != NULL) {
        printf("%d -> ", current->data);
        current = current->next;
    }
    printf("NULL\n");
}

int main() {
    Node* X = createSortedLinkedList();
    Node* Y = createSortedLinkedList();

    printf("List X: ");
    display(X);

    printf("List Y: ");
    display(Y);

    Node* Z = mergeSortedLists(X, Y);

    printf("Merged List Z: ");
    display(Z);

    return 0;
}
