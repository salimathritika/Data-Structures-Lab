//NOT WORKING
#include <stdio.h>
#include<stdlib.h>

typedef struct
{
    int data;
    struct node*next;
}node;

node *front=NULL;
node *last=NULL;

void create(int n)
{
    node *temp=(node*)malloc(sizeof(node));
    temp->data=n;
   // temp->next=NULL;
    if(last==NULL)
    {
        temp->next=NULL;
        front=temp;
        last=front->next=front;
    }
    else
    {
        temp->next=front;
        last=last->next=temp;
    }

}

void display()
{
    node*curr;
    if(last==NULL)
        printf("\nEmpty\n");
    else
    {
        for(curr=last->next;curr!=last;curr=curr->next)
            printf("%d",curr->data);
        printf("%d",curr->data);
    }
}

int main()
{
    int opt,n,ele;
    printf("1.To insert element\n2.To display\n-1.To exit");
    do
    {
        printf("\nEnter choice:");
        scanf("%d",&opt);
        switch(opt)
        {
        case 1:
            {
                printf("\nEnter element to be inserted:");
                scanf("%d",&ele);
                break;
            }
        case 2:
            {
                display();
                break;
            }
        case -1:
            {
                printf("\nExiting\n");
            }
        }
    }while(opt!=-1);
}
